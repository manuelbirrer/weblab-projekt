{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
